<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
         <% if @user.errors.any? %>
         <%= @user.errors.count %> errors prohibited this book from being saved:
         <% @user.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
         <% end %>
         <%= form_with model:@user, local:true do |f| %>

       <div class="field">

      <div class="form-group">
        <label for="book_title">Name</label>
        <div><%= f.text_field :name, class: "form-control" %></div>
      </div>

       <%= attachment_image_tag @user, :profile_image, :fill, 60, 60%>
       <label for="inputImage">ProfileImage</label>
       <div><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div>


      <div class="form-group">
        <label for="book_body">Introduction</label>
        <div><%= f.text_area :introduction, class: "form-control" %></div>
      </div>

      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>

      <% end %>
  </div>
</div>
